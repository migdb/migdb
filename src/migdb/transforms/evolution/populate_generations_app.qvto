}

query reduced::operations::SetParent::isValid(gen : reduced::ModelGeneration) : Boolean {
	return gen.isAbstractClassInGeneration(self.name)
		   and gen.isAbstractClassInGeneration(self.parentName)
		   and not gen.findAbstractClass(self.parentName).oclAsType(reduced::Class).isDescendantOf(self.name);
}

mapping reduced::operations::SetParent::apply(inout gen : reduced::ModelGeneration) {
	var c : reduced::Class := gen.findAbstractClass(self.name).oclAsType(reduced::Class);
	c.parent := gen.findAbstractClass(self.parentName).oclAsType(reduced::Class);	
}

