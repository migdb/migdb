query reduced::operations::SetAbstract::isValid(gen : reduced::ModelGeneration) : Boolean {
	return gen.isAbstractClassInGeneration(self.name);
}

mapping reduced::operations::SetAbstract::apply(inout gen : reduced::ModelGeneration) {
	var c : reduced::Class := gen.findAbstractClass(self.name).oclAsType(reduced::Class);
	c.isAbstract := self.isAbstract;
}

query reduced::operations::SetEmbedded::isValid(gen : reduced::ModelGeneration) : Boolean {
	return gen.isAbstractClassInGeneration(self.name);
}

mapping reduced::operations::SetEmbedded::apply(inout gen : reduced::ModelGeneration) {
